<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:dither="true" android:shape="rectangle">
            <gradient android:angle="45" android:endColor="@android:color/white" android:startColor="#a070a1" android:type="linear" />

            <corners android:radius="6dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:dither="true" android:shape="rectangle">

            <gradient android:angle="0" android:endColor="#a070a1" android:startColor="@android:color/white" android:type="linear" />

            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>